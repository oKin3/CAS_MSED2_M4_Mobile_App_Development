<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Home" />
    </ActionBar>

<StackLayout height="100%">
    <StackLayout>
        <Label text="New Item" class="text-3xl text-center" />
        <TextField id="newItemName" hint="Enter new Item Name" />
        <TextField id="newItemDate" hint="Enter new Item Date" />
        <TextField id="newItemImage" hint="Enter new Item Image" />
        <Button text="Add" tap="add" background="gray"></Button>
    </StackLayout>
    <Label text="{{title}}" class="text-3xl text-center" />
    <ListView items="{{todos}}" separatorColor="black" background="gray" class="list-group" itemTap="onItemTap">
        <ListView.itemTemplate>
            <StackLayout>
                <GridLayout   columns="*, 2*" rows="2*, 3*">
                    <Label class="m-10 h3" text="{{ name }}"  row="0" col="0"/>
                    <Label class="m-10 h3" text="{{ date }}" row="0" col="1" />
                    <Label class="m-10 h3" text="{{ image }}" row="1" col="0" colspam="2" />
                </GridLayout>
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</StackLayout>
</Page>
