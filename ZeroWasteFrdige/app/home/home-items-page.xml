<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Home" />
    </ActionBar>

<StackLayout height="100%">
    <StackLayout>
        <Label text="New Item" class="text-3xl text-center" />
        <TextField id="newItem" hint="Enter new Item" />
        <Button text="Add" tap="add"></Button>
    </StackLayout>
    <Label text="{{title}}" class="text-3xl text-center" />
    <ListView items="{{todos}}" separatorColor="gray" rowHeight="50" background="lightgray" class="list-group" itemTap="onItemTap">
        <ListView.itemTemplate>
            <StackLayout class="list-group-item">
                <Label text="{{ name || 'Preparing data...' }}" textWrap="true" class="title" />
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</StackLayout>
</Page>
