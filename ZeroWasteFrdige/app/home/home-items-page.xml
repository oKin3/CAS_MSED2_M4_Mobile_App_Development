<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar>
        <Label text="Home" />
    </ActionBar>

<StackLayout height="100%">
    <StackLayout>
        <Label text="New Item" class="text-3xl text-center" />
        <TextField id="newItemName" hint="Enter new Item Name" />
        <TextField id="newItemDate" hint="Enter new Item Date" />
        <StackLayout orientation="horizontal">
            <Button text="Select Picture" tap="selectImage" id="selectImage" background="gray" width="33%"></Button>
            <Button text="Take Picture" tap="takePicture" id="takePicture" background="gray" width="33%"></Button>
        </StackLayout>
        <Button text="Add" tap="add" background="gray"></Button>
    </StackLayout>
    <Label text="{{title}}" class="text-3xl text-center" />
    <ListView items="{{todos}}" separatorColor="black" background="gray" class="list-group" itemTap="onItemTap">
        <ListView.itemTemplate>
            <StackLayout>
                <GridLayout columns="*, *" rows="*, *">
                    <Image src="{{ image }}" width="100" height="100" row="0" col="0" rowSpan="2" />
                    <Label class="m-10 h3" text="{{ name }}" row="0" col="1"/>
                    <Label class="m-10 h3" text="{{ date }}" row="1" col="1" />
                </GridLayout>
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</StackLayout>
</Page>
